<div class="w-full mx-auto bg-gray-50 md:p-8 p-4 rounded-lg" >
    
    <% if notice.present? %>
      <div class="my-3 p-3 bg-green-50 text-green-800 italic font-semibold" >
          <%= notice %>
      </div>
    <% end %>
    <div class="text-xl my-2 lora-font"  >
      Login
    </div>
    <div class="my-3" >
      <%= form_tag do %>
        <div class="my-3" >
          <%= label_tag :username, "Username" %>
          <%= text_field_tag :username,params[:username], class: "p-2 rounded-lg outline-none ring-1 ring-green-600
    focus:ring-2",autocomplete: false %>
        </div>
        <div>
          <%= label_tag :password, "Password" %>
          <%= password_field_tag :password,params[:password], class: "p-2 rounded-lg outline-none ring-1 ring-green-600
    focus:ring-2",autocomplete: false %>
        </div>
        <div class="my-3" >
          <%= submit_tag "Login", class: "rounded-lg py-3 px-5 bg-green-700 text-white font-semibold rounded-lg" %>
        </div>
      <% end %>
    </div>
</div>
