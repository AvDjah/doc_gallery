<script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/TextPlugin.min.js"></script>
<div class="w-full" >
  <div class="mx-auto bg-gray-100 md:p-8 p-4 rounded-lg shadow-lg w-full ">
    <div class="text-center my-4 font-extrabold text-5xl lora-font text-green-800">
      Welcome to your own library.
    </div>
  </div>
  <div>
    <div class="md:mt-14 my-4 text-3xl  justify-evenly flex text-center md:flex-row flex-col  gap-2 lora-font ">
      <div >
        <%= form_with url: home_index_path, method: :get, data: { turbo_stream: true } do |form| %>
          <%= form.text_field :info_view, value: "fast", hidden: true %>
          <button class="hover:underline hover:underline-offset-2 cursor-pointer" >
            Fast.
          </button>
        <% end %>
      </div>
      <div  >
        <%= form_with url: home_index_path, method: :get, data: { turbo_stream: true } do |form| %>
          <%= form.text_field :info_view, value: "easy", hidden: true %>
          <button class="hover:underline hover:underline-offset-2 cursor-pointer" >
            Easy.
          </button>
        <% end %>
      </div>
      <div  >
        <%= form_with url: home_index_path, method: :get, data: { turbo_stream: true } do |form| %>
          <%= form.text_field :info_view, value: "versatile", hidden: true %>
          <button class="hover:underline hover:underline-offset-2 cursor-pointer" >
            Versatile.
          </button>
        <% end %>
      </div>
    </div>
    <div class="w-full flex flex-row justify-center" >
      <% if @info_view == "fast" %>
        <%= render partial: "home/info_tags/fast" %>
      <% elsif @info_view == "easy" %>
        <%= render partial: "home/info_tags/easy" %>
      <% elsif @info_view == "versatile" %>
        <%= render partial: "home/info_tags/versatile" %>
      <% else %>
        <div id="info_tag" >
        </div>
      <% end %>
    </div>
  </div>
  <div class="md:mt-10 w-full mt-6 flex flex-col md:flex-row justify-center md:gap-32 gap-8" >
    <div class="w-52 h-64 bg-gray-100 p-4 rounded-lg shadow-xl transition-all ease-in-out duration-200 hover:-translate-y-2 " >
      <div class="p-2 text-center font-bold" >
        Upload PDFs
      </div>
      <div class="flex flex-row justify-center my-2" >
        <%= image_tag "pdf.png", class: "w-32 h-32" %>
      </div>
    </div>
    <div class="w-52 h-64 bg-gray-100 p-4 rounded-lg shadow-xl transition-all ease-in-out duration-200 hover:-translate-y-2" >
      <div class="p-2 text-center font-bold" >
        Or plain texts
      </div>
      <div class="flex flex-row justify-center my-2" >
        <%= image_tag  "json-file.png", class: "w-32 h-32" %>
      </div>
    </div>
  </div>
  <div class="w-full flex flex-row justify-center md:mt-20 my-12" >
    <button class="px-8 py-3 text-xl bg-gray-100 text-green-800 font-medium rounded-lg hover:ring-2 hover:ring-green-600 ring-offset-2">
      Get Started
    </button>
  </div>
</div>
<script>
  // use a script tag or an external JS file
  document.addEventListener("DOMContentLoaded", (event) => {
   gsap.registerPlugin(TextPlugin)
   // gsap code here!
  });
</script>
